			{{ form_label(form.address, "Adresse", {'label_attr': {'class': 'col-lg-offset-1 col-sm-2 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
