{% trans_default_domain 'FOSUserBundle' %}

<div class="row well">
		<div class="panel panel-default col-lg-offset-3 col-lg-6">
			{% if error %}
		    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
		
			<form action="{{ path("fos_user_security_check") }}" method="post">
				
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			
				<fieldset>
					<legend>Connexion</legend>
						<div class="form-group row">
							<div class="col-sm-6 control-label">
								<label for="username">{{ 'security.login.username'|trans }}</label>
							</div>
							
							<div class="col-sm-6">
								 <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required" />
							</div>
						</div>
	
						<div class="form-group row">
							<div class="col-sm-6 control-label">
								<label for="password">{{ 'security.login.password'|trans }}</label>
							</div>
							
							<div class="col-sm-6">
								 <input type="password" id="password" name="_password" class="form-control"  required="required" />
							</div>
						</div>
						
						<div class="form-group row">
							<div class="col-sm-6 control-label">
								<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
							</div>
							
							<div class="col-sm-6">
								 <input type="checkbox" id="remember_me" name="_remember_me" class="form-control" value="on" />
							</div>
						</div>
						
						<div class="form-group row">
							<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  class="btn btn-success btn-sm active col-lg-offset-5" role="button" />
						</div>
				</fieldset>
				
			</form>
		</div>
	</div>