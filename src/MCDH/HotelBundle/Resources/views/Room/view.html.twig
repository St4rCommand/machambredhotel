{% extends "MCDHHotelBundle::layout.html.twig" %}

{% block title %}
	Chambre {{ room.name }} - {{ parent() }}
{% endblock %}

{% block mcdh_hotel_body %}
	
	{% block mcdh_hotel_page %}
		<h2><a href="{{ path('mcdh_hotel_view', {'idHotel':room.hotel.id}) }}">{{ room.hotel.name }}</a></h2>
		{% if hotel.image.uploadDir is defined %}
			<img
				src="{{ asset(room.image.uploadDir ~ '/' ~ room.image.id ~ '.' ~ room.image.extension) }}"
				alt="{{ room.image.alt }}"
			/>
		{% endif %}
		
		{% if is_granted('ROLE_HOTELKEEPER') %}
			<a href="{{ path('mcdh_hotel_edit_room', {'idRoom':room.id}) }}">Editer</a>
		{% endif %}
		
		{% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path('mcdh_hotel_delete_room', {'idRoom':room.id}) }}">Supprimer</a>
		{% endif %}
		
		<a href="{{ path('mcdh_hotel_add_booking', {'idRoom':room.id}) }}">Réserver</a>	
	{% endblock %}

	{% block mcdh_hotel_content %}
  		
  		{% block mcdh_hotel_room %}
  			<p>Chambre {{ room.name }}, {{ room.floor }}ème étage</p>
			<p>{{ room.people }} personne(s), {{ room.orientation }}</p>
		{% endblock %}
		
		{% block mcdh_hotel_bookings %}
			{% if is_granted('ROLE_HOTELKEEPER') %}
				{% for booking in bookings %}
			      <li>
			        <a href="{{ path('mcdh_hotel_view_booking', {'idBooking': booking.id}) }}"> Réservation n° {{ booking.id }}</a>
					
			    	du {{ booking.beginDate|date('d-m-Y') }} au {{ booking.endDate|date('d-m-Y') }}
			        
					<a href="{{ path('mcdh_hotel_edit_booking', {'idBooking': booking.id}) }}">Editer</a>
					<a href="{{ path('mcdh_hotel_delete_booking', {'idBooking': booking.id}) }}">Supprimer</a>
			      </li>
			    {% else %}
			      <li>Pas (encore !) de chambres pour cet hôtel.</li>
			    {% endfor %}
			{% endif %}
		    
		{% endblock %}
	{% endblock %}
	
{% endblock %}