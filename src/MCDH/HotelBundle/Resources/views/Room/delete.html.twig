{% extends "MCDHHotelBundle:Room:layout.html.twig" %}

{% block title %}
	Suppression - {{ parent() }}
{% endblock %}

{% block mcdh_hotel_breadcrumb_trail %}
	{{ parent() }} > Supprimer
{% endblock %}

{% block mcdh_hotel_page_option %}
	 {{ parent() }}
	<a href="{{ path('mcdh_hotel_view_room', {'idRoom':room.id}) }}" class="button btn-primary btn-sm active" role="button">Revenir à la chambre</a>
{% endblock %}

{% block mcdh_hotel_content %}
	{{ parent() }}

	{% if is_granted('ROLE_ADMIN') %}
		<div class="well">
	  		<fieldset>
	  			<legend>Suppression</legend>
				{{ form_start(form,{}) }}
				{{ form_errors(form) }}
				
				<p>Etes-vous sur de vouloir supprimer la chambre {{ room.name }} ?</p>
	  			<div class="form-group row">
					<a href="{{ path('mcdh_hotel_view_room', {'idRoom':room.id}) }}" role="button" class="col-lg-offset-3 col-lg-3 button btn-lg btn-primary active">Revenir à la chambre</a>
					{{ form_widget(form.delete, {'attr': {'class': 'col-lg-offset-1 btn btn-lg btn-danger'}}) }}
				</div>
				{{ form_rest(form) }}
				{{ form_end(form) }}
			</fieldset>
  		</div>
	{% else %}
	  		<p>Vous devez être administrateur pour pouvoir supprimer un élément</p>
  		{% endif %}
{% endblock %}
	
