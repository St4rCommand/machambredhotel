{% extends "MCDHHotelBundle::layout.html.twig" %}

{% block title %}
	{{ 'hotel.suppressio.onglet'|trans }} - {{ parent() }}
{% endblock %}

{% block mcdh_room_body %}

	{% block mcdh_hotel_page %}
		<h2><a href="{{ path('mcdh_hotel_view', {'idHotel':room.hotel.id}) }}">{{ room.hotel.name }}</a></h2>
		<h3><a href="{{ path('mcdh_hotel_view_room', {'idRoom':room.id}) }}">{{ room.name }}</a></h3>
	{% endblock %}

	{% block mcdh_hotel_content %}
	
		<h2>{{ 'room.delete'|trans }}</h2>
		
		<p>{{ 'room.delete.message.'|trans }} {{ room.name }} ?</p>
		<a href="{{ path('mcdh_hotel_view_room', {'idRoom':room.id}) }}">{{ 'back.room'|trans }}</a>
		{{ form(form) }}
	
	{% endblock %}
	
{% endblock %}