{%  extends "MCDHHotelBundle::layout.html.twig" %}

{% block title %}
  {{ hotel.name }} - {{ parent() }}
{% endblock %}

{% block mcdh_hotel_body %}
	
	{% block mcdh_hotel_page %}
		{{ parent() }}
		<a href="{{ path('mcdh_hotel_edit', {'idHotel':hotel.id}) }}">{{ 'bouton.editer'|trans }}</a>
	  	<a href="{{ path('mcdh_hotel_delete', {'idHotel':hotel.id}) }}">{{ 'bouton.supprimer' |trans }}</a>
	  	<a href="{{ path('mcdh_hotel_add_room', {'idHotel':hotel.id}) }}">{{ 'room.ajout'|trans }}</a>
	{% endblock %}

	{% block mcdh_hotel_content %}
	
		{% block mcdh_hotel_description %}
			<h3>{{ hotel.city }}, {{ hotel.country }}</h3>
			<p>{{ hotel.description }}</p>
		{% endblock %}
		
		{% block mcdh_hotel_rooms %}
			{% for room in rooms %}
		      <li>
		        <a href="{{ path('mcdh_hotel_view_room', {'idRoom': room.id}) }}"> {{ room.name }}</a>
				
		    	{{ room.price|number_format(2, ',', ' ') }} â‚¬
		        
		        <a href="{{ path('mcdh_hotel_edit_room', {'idRoom': room.id}) }}">{{ 'bouton.editer'|trans }}</a>
		        <a href="{{ path('mcdh_hotel_delete_room', {'idRoom': room.id}) }}">{{ 'bouton.supprimer' |trans }}</a>
		        <a href="{{ path('mcdh_hotel_add_booking', {'idRoom':room.id}) }}">{{ 'book' | trans }}</a>
		      </li>
		    {% else %}
		      <li>{{ 'pas.hotel'|trans }}</li>
		    {% endfor %}
		{% endblock %}
	
	{% endblock %}
  
{% endblock %}
