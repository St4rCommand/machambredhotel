{% extends "MCDHHotelBundle:Room:layout.html.twig" %}

{% block title %}
	{{ 'booking' | trans }} - {{ parent() }}
{% endblock %}

{% block mcdh_hotel_breadcrumb_trail %}
	{{ parent() }} > Réserver
{% endblock %}


{% block mcdh_hotel_content %}

	{{ parent() }}
	
	{% if is_granted('ROLE_CUSTOMER') %}
		<p>{{ 'night.price'|trans }} : {{ room.price }} €</p>
		<ul>
			{% for booking in bookings %}
			<li>{{ 'booking.of'|trans  }} {{ booking.beginDate|date('d-m-Y') }} {{ 'to'|trans }} {{ booking.endDate|date('d-m-Y') }}</li>
			{% endfor %}
		</ul>
		{{ include("MCDHHotelBundle:Booking:form.html.twig") }}
	{% endif %}
{% endblock %}
