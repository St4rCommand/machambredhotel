<div class="well">
	{{ form_start(form,{}) }}
	{{ form_errors(form) }}
	
	<fieldset>
		<legend>Chambre</legend>
		
		<div class="form-group row">
			{{ form_label(form.beginDate, "Date de début", {'label_attr': {'class': 'col-lg-offset-1 col-sm-2 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(form.beginDate, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(form.beginDate, {'attr': {'class': 'col-sm-3'}}) }}
		</div>
		
		<div class="form-group row">
			{{ form_label(form.endDate, "Date de fin", {'label_attr': {'class': 'col-lg-offset-1 col-sm-2 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(form.endDate, {'attr': {'class': 'col-sm-3'}}) }}
		</div>
		
		<div class="form-group row">
			{{ form_label(form.people, "Nombre de personnes", {'label_attr': {'class': 'col-lg-offset-1 col-sm-2 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(form.people, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(form.people, {'attr': {'class': 'col-sm-3'}}) }}
		</div>
		
		<div class="form-group row">
			{{ form_label(form.breakfast, "Petit déjeuner", {'label_attr': {'class': 'col-lg-offset-1 col-sm-2 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(form.breakfast, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(form.breakfast, {'attr': {'class': 'col-sm-3'}}) }}
		</div>
		
	</fieldset>
	
	<fieldset>
		<legend>Validation</legend>
		<div class="form-group row">
			{{ form_widget(form.save, {'attr': {'class': 'col-lg-offset-6 btn btn-primary'}}) }}
		</div>
	</fieldset>
			
	{{ form_rest(form) }}
	{{ form_end(form) }}
</div>