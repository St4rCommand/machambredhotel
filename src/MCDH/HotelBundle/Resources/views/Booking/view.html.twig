{% extends "MCDHHotelBundle:Booking:layout.html.twig" %}

{% block title %}
	Réservation - {{ parent() }}
{% endblock %}


{% if is_granted('ROLE_CUSTOMER') or is_granted('ROLE_HOTELKEEPER') %}

	{% block mcdh_hotel_content %}
	
		{{ parent() }}
		
		{% if is_granted('ROLE_HOTELKEEPER') %}
			<a href="mailto:{{ booking.customer.email }}" class="button btn-primary btn-sm active" role="button">Contacter le client</a>
		{% elseif is_granted('ROLE_CUSTOMER') %}
			<a href="mailto:{{ booking.room.hotel.email }}" class="button btn-primary btn-sm active" role="button">Contacter l'hôtel</a>
		{% endif %}
		
  		<p>Date d'arrivée : {{ booking.beginDate|date('d-m-Y') }}</p>
		<p>Date de départ : {{ booking.endDate|date('d-m-Y') }}</p>
		<p>Prix : {{ booking.price|number_format(2, ',', ' ') }} €</p>
		<p>Nombre de personnes : {{ booking.people }}</p>
		<p>Petit déjeuner : {% if booking.breakfast == true %}Oui{% else %}Non{% endif %}</p>
	{% endblock %}
	
{% endif %}
	
