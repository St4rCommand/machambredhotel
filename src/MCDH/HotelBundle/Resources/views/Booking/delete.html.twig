{% extends "MCDHHotelBundle:Booking:layout.html.twig" %}

{% block title %}
	Annulation - {{ parent() }}
{% endblock %}

{% block mcdh_hotel_breadcrumb_trail %}
	{{ parent() }} > Supprimer
{% endblock %}

{% block mcdh_hotel_page_option %}
	 {{ parent() }}
	<a href="{{ path('mcdh_hotel_view_booking', {'idBooking':booking.id}) }}" class="button btn-primary btn-sm active" role="button">Revenir à la réservation</a>
{% endblock %}

{% block mcdh_hotel_content %}
	
	{{ parent() }}

	{% if is_granted('ROLE_CUSTOMER') %}
		<div class="well">
	  		<fieldset>
	  			<legend>Suppression</legend>
				{{ form_start(form,{}) }}
				{{ form_errors(form) }}
				
				<p>Etes-vous sur de vouloir supprimer la réservation {{ booking.id }} du {{ booking.beginDate|date('d-m-Y') }} au {{ booking.endDate|date('d-m-Y') }} ?</p>
	  			<div class="form-group row">
					<a href="{{ path('mcdh_hotel_view_booking', {'idBooking':booking.id}) }}" role="button" class="col-lg-offset-3 col-lg-3 button btn-lg btn-primary active">>Revenir à la réservation</a>
					{{ form_widget(form.delete, {'attr': {'class': 'col-lg-offset-1 btn btn-lg btn-danger'}}) }}
				</div>
				{{ form_rest(form) }}
				{{ form_end(form) }}
			</fieldset>
  		</div>
	{% else %}
		<p>Vous devez être administrateur pour pouvoir supprimer un élément</p>
  	{% endif %}
		
	
{% endblock %}
