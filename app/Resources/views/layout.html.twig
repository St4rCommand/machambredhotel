<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<title>{% block title %}MaChambreDHotel.com{% endblock %}</title>
	
		{% block stylesheets %}
		{% endblock %}
	</head>
	
	<body>
		<header>
			<h1>MaChambreDHotel.com</h1>
			<p>Le site de réservation de chambre d'hôtel</p>
		</header>
		
		<div id="page">
			{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			    Connecté en tant que {{ app.user.username }} - <a href="{{ path('fos_user_profile_show') }}">Profil</a> - <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
			{% else %}
			    <a href="{{ path('fos_user_security_login') }}">Connexion</a>
			    <a href="{{ path('fos_user_registration_register') }}">Inscription</a>
			{% endif %}
		
			<div id="menu">
				<h1></h1>
				<ul>
				</ul>
			</div>
			
			<div id="content">
				{% block body %}
	       		{% endblock %}
			</div>
		</div>
	
		<footer>
			<p>Ce site internet a été créé par Simon BERNARD et Romain HUNAULT.</p>
		</footer>
		
	    {% block javascripts %}
		{% endblock %}
	</body>
</html>