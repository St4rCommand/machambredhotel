<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<title>{% block title %}MaChambreDHotel.com{% endblock %}</title>
	
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
		{% endblock %}
	</head>
	
	<body>
		<div class="container">
	
			<header class="page-header row" >
				<div class="col-lg-3 col-sm-4 ">
					<img src="{{ asset('images/logo.png') }}"
					alt="logo de MaChambreDHÃ´tel"
					class="img-responsive"
					/>
					<!-- <h1>MaChambreDHotel.com</h1>
					<p>{#{ 'mcdh'|trans }#}</p> -->
				</div>
				
				<div class="panel panel-default col-lg-offset-6 col-sm-offset-4 col-lg-3 col-sm-4">
					<div class="panel-body">
						{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
						    <p>{{ 'connect'|trans }} {{ app.user.username }}</p>
						    <div>
						    	<a href="{{ path('fos_user_profile_show') }}" class="button btn-primary btn-sm active" role="button">Profil</a>
						    	<a href="{{ path('fos_user_security_logout') }}" class="button btn-warning btn-sm active" role="button"><span class="glyphicon glyphicon-remove-circle"></span>{{ 'disconnect'|trans }}</a>
						    </div>
						{% else %}
						    <a href="{{ path('fos_user_security_login') }}" class="button btn-primary btn-sm active" role="button">{{ 'connection'|trans }}</a>
						    <a href="{{ path('fos_user_registration_register') }}" class="button btn-success btn-sm active" role="button">{{ 'subscribe'|trans }}</a>
						{% endif %}
					</div>
				</div>
			</header>
			
			<div id="page" class="row">
			
				<nav class="navbar navbar-default row">
					<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      			<ul class="nav navbar-nav">
		       				 <li><a href="#" class="">{{ 'home'|trans }}</a></li>
		       				 <li><a href="{{ path('mcdh_hotel_homepage') }}" class="{% if app.request.get('_route') == 'mcdh_hotel_homepage' %} {% endif %}">{{ 'hotel'|trans }}</a></li>
		       				 <li><a href="{{ path('fos_user_profile_show') }}" class="{% if app.request.get('_route') == 'fos_user_profile_show' %} {% endif %}">{{ 'profil'|trans }}</a></li>
		       			</ul>
		       			<form class="navbar-form navbar-right" role="search">
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Search">
							</div>
							<button type="submit" class="btn btn-default">{{ 'submit'|trans }}</button>
						</form>
		       		</div>
				</nav>
				
				<div id="content row" class="">
					{% block body %}
		       		{% endblock %}
				</div>
			</div>
		
			<footer class="row">
				<p>{{ 'createdby'|trans }}</p>
				<p>{{ 'ihm'|trans }}</p>
			</footer>
			
		    {% block javascripts %}
			{% endblock %}
		</div>
	</body>
</html>